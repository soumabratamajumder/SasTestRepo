<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_0.xsd">
    <listener>
        <listener-class>org.owasp.csrfguard.CsrfGuardServletContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.owasp.csrfguard.CsrfGuardHttpSessionListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>login_slvt</servlet-name>
        <servlet-class>login.login_slvt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sasApiTest</servlet-name>
        <servlet-class>sas.sasApiTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login_slvt</servlet-name>
        <url-pattern>/login_slvt</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Cap_Image</servlet-name>
        <servlet-class>Cap_Image</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cap_Image</servlet-name>
        <url-pattern>/Cap_Image</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>fetchRCData</servlet-name>
        <servlet-class>login.fetchRCData</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fetchRCData</servlet-name>
        <url-pattern>/fetchRCData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sasApiTest</servlet-name>
        <url-pattern>/sasApiTest</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
